<div class="col-5 mx-auto">
  <% if @user.errors.any? %>
    <div class="col-12 alert alert-danger">
      <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2>User info</h2>
  <%= form_with model: @user do |f| %>
    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, autocomplete: @user.name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :profile_image %><br />
      <%= f.file_field :profile_image, accept: "image/*" %>
    </div>
    <div class="form-group">
      <%= f.label :introduction %><br />
      <%= f.text_area :introduction, autocomplete: @user.introduction, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Update User", class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>